{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"assets": [
			{
				"include": "**/*.hbs",
				"outDir": "dist/src"
			},
			{
				"include": "**/*.ttf",
				"outDir": "dist/src"
			}
		],
		"watchAssets": true,
		"deleteOutDir": true
	}
}
